<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="188dp"
        android:layout_height="42dp"
        android:background="#6A009688"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.148" />

    <Button
        android:id="@+id/buttonMultiplicacion"
        android:layout_width="59dp"
        android:layout_height="42dp"
        android:onClick="onClicMultiplicacion"
        android:text="x"
        app:backgroundTint="#B57D880F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.806"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.715" />

    <Button
        android:id="@+id/buttonNumberFive"
        android:layout_width="57dp"
        android:layout_height="40dp"
        android:onClick="onClickButtonFive"
        android:text="5"
        app:backgroundTint="#D3680C0C"
        app:layout_constraintBottom_toTopOf="@+id/buttonNumberEight"
        app:layout_constraintEnd_toStartOf="@+id/buttonNumberSix"
        app:layout_constraintHorizontal_bias="0.768"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumberTwo" />

    <Button
        android:id="@+id/buttonNumberSeven"
        android:layout_width="57dp"
        android:layout_height="42dp"
        android:onClick="onClickButtonSeven"
        android:text="7"
        app:backgroundTint="#E83F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.177"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.484" />

    <Button
        android:id="@+id/buttonNumberThree"
        android:layout_width="57dp"
        android:layout_height="40dp"
        android:onClick="onClickButtonThree"
        android:text="3"
        app:backgroundTint="#B253B156"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.283" />

    <Button
        android:id="@+id/buttonNumberSix"
        android:layout_width="58dp"
        android:layout_height="41dp"
        android:onClick="onClickButtonSix"
        android:text="6"
        app:backgroundTint="#ABC61010"
        app:layout_constraintBottom_toTopOf="@+id/buttonNumberNine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumberThree" />

    <Button
        android:id="@+id/buttonNumberFour"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickButtonFour"
        android:text="4"
        app:backgroundTint="#C67C0D0D"
        app:layout_constraintBottom_toTopOf="@+id/buttonNumberSeven"
        app:layout_constraintEnd_toStartOf="@+id/buttonNumberFive"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonnNumberONE"
        app:layout_constraintVertical_bias="0.42" />

    <Button
        android:id="@+id/buttonNumberNine"
        android:layout_width="57dp"
        android:layout_height="39dp"
        android:onClick="onClickButtonNine"
        android:text="9"
        app:backgroundTint="#C42D4DF8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.807"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.482" />

    <Button
        android:id="@+id/buttonResta"
        android:layout_width="59dp"
        android:layout_height="47dp"
        android:onClick="onClickResta"
        android:text="-"
        app:backgroundTint="#D0636C0F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.72" />

    <Button
        android:id="@+id/buttonNumberZero"
        android:layout_width="57dp"
        android:layout_height="40dp"
        android:onClick="onClickButtonZero"
        android:text="0"
        app:backgroundTint="#9E813118"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/buttonNumberEight"
        android:layout_width="56dp"
        android:layout_height="40dp"
        android:onClick="onClickButtonEight"
        android:text="8"
        app:backgroundTint="#C4111F6C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonNumberNine"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toEndOf="@+id/buttonNumberSeven"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.483" />

    <Button
        android:id="@+id/buttonNumberTwo"
        android:layout_width="58dp"
        android:layout_height="41dp"
        android:onClick="onClickButtonTwo"
        android:text="2"
        app:backgroundTint="#B9075A0A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.283" />

    <Button
        android:id="@+id/buttonIgual"
        android:layout_width="60dp"
        android:layout_height="41dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="67dp"
        android:layout_marginRight="67dp"
        android:layout_marginBottom="181dp"
        android:onClick="onClickIgual"
        android:text="="
        app:backgroundTint="#BA782309"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/buttonNumberZero"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumberNine"
        app:layout_constraintVertical_bias="0.295" />

    <Button
        android:id="@+id/buttonSuma"
        android:layout_width="56dp"
        android:layout_height="39dp"
        android:onClick="onClickSuma"
        android:text="+"
        app:backgroundTint="#CE601F0B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.174"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.599" />

    <Button
        android:id="@+id/buttonnNumberONE"
        android:layout_width="59dp"
        android:layout_height="40dp"
        android:onClick="onClickButtonOne"
        android:text="1"
        app:backgroundTint="#009688"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.283" />

    <Button
        android:id="@+id/buttonDivision"
        android:layout_width="56dp"
        android:layout_height="43dp"
        android:onClick="onClickDivision"
        android:text="/"
        app:backgroundTint="#DC596108"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.177"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.716" />

</androidx.constraintlayout.widget.ConstraintLayout>